<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h1>
                {{route}}
            </h1>
            <a href="/" class="btn btn-success">
                <svg width="1em" height="1em" viewBox="0 0 16 16"
                    class="bi bi-arrow-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd"
                    d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                </svg> Go Back</a>
        </div>
    </div>
</div>
<div class="row">
    {{#each files_folders}}
    <div class="col-md-3 my-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-truncate align-items-center">
                    {{#if folder}}
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-folder" fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg">
                        <path
                            d="M9.828 4a3 3 0 0 1-2.12-.879l-.83-.828A1 1 0 0 0 6.173 2H2.5a1 1 0 0 0-1 .981L1.546 4h-1L.5 3a2 2 0 0 1 2-2h3.672a2 2 0 0 1 1.414.586l.828.828A2 2 0 0 0 9.828 3v1z" />
                        <path fill-rule="evenodd"
                            d="M13.81 4H2.19a1 1 0 0 0-.996 1.09l.637 7a1 1 0 0 0 .995.91h10.348a1 1 0 0 0 .995-.91l.637-7A1 1 0 0 0 13.81 4zM2.19 3A2 2 0 0 0 .198 5.181l.637 7A2 2 0 0 0 2.826 14h10.348a2 2 0 0 0 1.991-1.819l.637-7A2 2 0 0 0 13.81 3H2.19z" />
                    </svg>
                    {{else}}
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-file-earmark" fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg">
                        <path
                            d="M4 0h5.5v1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h1V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2z" />
                        <path d="M9.5 3V0L14 4.5h-3A1.5 1.5 0 0 1 9.5 3z" />
                    </svg>
                    {{/if}}{{ name }}
                </h4>
                <div class="row">
                    <div class="col">
                        <form action="/?_method=DELETE&name={{name}}" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                    {{#if folder}}
                    <div class="col">
                        <form action="/?action=enter&name={{name}}" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-success btn-sm">Enter</button>
                        </form>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h1>This folder is empty</h1>
            <a href="/" class="btn btn-success btn-block">Go Back</a>
        </div>
    </div>
    {{/each}}
</div>